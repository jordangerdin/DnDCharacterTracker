<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/add_picture_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8_add_camera_64"
        app:layout_constraintBottom_toBottomOf="@+id/add_character_button"
        app:layout_constraintEnd_toStartOf="@+id/add_character_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_character_button" />

    <ImageButton
        android:id="@+id/add_notes_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8_create_document_80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_character_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/add_character_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8_add_user_male_50"
        app:layout_constraintBottom_toBottomOf="@+id/add_notes_button"
        app:layout_constraintEnd_toStartOf="@+id/add_notes_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_picture_button"
        app:layout_constraintTop_toTopOf="@+id/add_notes_button" />

</androidx.constraintlayout.widget.ConstraintLayout>